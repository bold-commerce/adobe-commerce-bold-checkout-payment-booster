### Update Quote Customer Info
# Updates customer information, billing and shipping addresses
# Requires quoteMaskId from quote creation
PUT {{baseUrl}}/rest/default/V1/shops/{{shopId}}/integration/quote/{{quoteMaskId}}/customer_info
Authorization: Bearer {{sharedSecret}}
Content-Type: application/json

{
  "customer": {
    "email": "customer@example.com",
    "firstname": "John",
    "lastname": "Doe"
  },
  "billing": {
    "firstname": "John",
    "lastname": "Doe",
    "street": ["123 Main St", "Apt 4"],
    "city": "Toronto",
    "region": "Ontario",
    "postcode": "M5V 3A8",
    "country_id": "CA",
    "telephone": "555-1234"
  },
  "shipping": {
    "firstname": "John",
    "lastname": "Doe",
    "street": ["123 Main St", "Apt 4"],
    "city": "Toronto",
    "region": "Ontario",
    "postcode": "M5V 3A8",
    "country_id": "CA",
    "telephone": "555-1234"
  }
}

