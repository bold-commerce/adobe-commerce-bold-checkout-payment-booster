<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="connect-src">
            <values>
                <value id="bold_commerce" type="host">api.boldcommerce.com</value>
                <value id="bold_commerce_staging" type="host">api.staging.boldcommerce.com</value>
                <value id="cashier" type="host">cashier.boldcommerce.com</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="allow_inline_resource" type="host">unsafe-inline</value>
                <value id="bold_commerce" type="host">api.boldcommerce.com</value>
                <value id="bold_commerce_staging" type="host">api.staging.boldcommerce.com</value>
                <value id="cashier" type="host">cashier.boldcommerce.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="bold_commerce" type="host">api.boldcommerce.com</value>
                <value id="bold_commerce_staging" type="host">api.staging.boldcommerce.com</value>
                <value id="bold_paypal_frame" type="host">*.paypal.com</value>
            </values>
        </policy>
        <policy id="object-src">
            <values>
                <value id="bold_commerce" type="host">api.boldcommerce.com</value>
                <value id="bold_commerce_staging" type="host">api.staging.boldcommerce.com</value>
            </values>
        </policy>
        <policy id="child-src">
            <values>
                <value id="bold_commerce" type="host">api.boldcommerce.com</value>
                <value id="bold_commerce_staging" type="host">api.staging.boldcommerce.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="bold_commerce_static" type="host">static.boldcommerce.com</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="www_paypal_objects" type="host">www.paypalobjects.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
