### Place Order
# Places the order with payment transaction data
# Requires quote to have customer info, shipping address, and shipping method set
POST {{baseUrl}}/rest/default/V1/shops/{{shopId}}/integration/quote/{{quoteMaskId}}/place_order
Authorization: Bearer {{sharedSecret}}
Content-Type: application/json

{
  "transactions": [
    {
      "gateway": "stripe",
      "payment_id": "payment_{{$timestamp}}",
      "amount": 10000,
      "transaction_id": "ch_{{$timestamp}}",
      "currency": "USD",
      "step": "authorized",
      "status": "authorized",
      "tender_type": "credit_card",
      "tender_details": {
        "last_four": "4242",
        "card_type": "visa",
        "cardholder_name": "John Doe"
      },
      "gateway_response_data": {}
    }
  ]
}

